<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <ImageView
        android:layout_width="1920px"
        android:layout_height="48px"
        android:src="@drawable/ic____3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="85px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_vpa_weather_middle_rain" />

        <TextView
            android:layout_width="234px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="40px"
            android:text="预约保养/维修"
            android:textColor="#2C2E37"
            android:textSize="36px" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="39px"
        android:layout_width="match_parent"
        android:layout_height="628px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1000px"
            android:layout_height="628px"
            android:layout_marginLeft="83px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1000px"
                android:layout_height="160px"
                android:background="@drawable/shape"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="128px"
                    android:layout_height="45px"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="58px"
                    android:text="服务类型"
                    android:textColor="#464B5C"
                    android:textSize="32px" />

                <ImageView
                    android:layout_width="360px"
                    android:layout_height="100px"
                    android:layout_marginLeft="82px"
                    android:layout_marginTop="30px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_vpa_weather_middle_rain" />

                <ImageView
                    android:layout_width="360px"
                    android:layout_height="100px"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="30px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_vpa_weather_middle_rain" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1000px"
                android:layout_height="210px"
                android:layout_marginTop="24px">

                <LinearLayout
                    android:layout_width="480px"
                    android:layout_height="210px"
                    android:background="@drawable/shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="128px"
                        android:layout_height="45px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:text="联系姓名"
                        android:textColor="@color/black"
                        android:textSize="32px" />

                    <EditText
                        android:layout_width="400px"
                        android:layout_height="40px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="45px"
                        android:hint="请输入"
                        android:textColor="@color/black"
                        android:background="@drawable/shape"
                        android:textColorHint="#454B5C"
                        android:textSize="32px"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="480px"
                    android:layout_height="210px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="128px"
                        android:layout_height="45px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:text="联系方式"
                        android:textColor="@color/black"
                        android:textSize="32px" />

                    <EditText
                        android:layout_width="400px"
                        android:layout_height="40px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="45px"
                        android:textColor="@color/black"
                        android:background="@drawable/shape"
                        android:textColorHint="#454B5C"
                        android:hint="请输入"

                        android:textSize="32px"

                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1000px"
                android:layout_height="210px"
                android:layout_marginTop="24px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="480px"
                    android:layout_height="210px"
                    android:background="@drawable/shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="128px"
                        android:layout_height="45px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:text="预约4S店"
                        android:textColor="@color/black"
                        android:textSize="32px" />

                    <EditText
                        android:layout_width="400px"
                        android:layout_height="40px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="45px"
                        android:hint="长城新动力"
                        android:textColor="@color/black"
                        android:background="@drawable/shape"
                        android:textColorHint="#454B5C"
                        android:textSize="32px"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="480px"
                    android:layout_height="210px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="128px"
                        android:layout_height="45px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:text="预约时间"
                        android:textColor="@color/black"
                        android:textSize="32px" />

                    <EditText
                        android:layout_width="400px"
                        android:layout_height="40px"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="45px"
                        android:hint="选择预约时间"
                        android:background="@drawable/shape"
                        android:textColorHint="#454B5C"
                        android:textColor="@color/black"
                        android:textSize="32px"

                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="680px"
                android:layout_height="628px"
                android:layout_marginLeft="40px"
                android:background="@drawable/shape"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="680px"
            android:layout_height="628px"
            android:layout_marginLeft="40px"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="192px"
                android:layout_height="45px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:textColor="@color/black"
                android:text="基础保养项目"
                android:textSize="32px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:layout_marginRight="50px">

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:src="@drawable/ic_vpa_weather_middle_rain" />

                    <TextView
                        android:layout_width="122px"
                        android:layout_height="33px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:background="@drawable/shape"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:text="机油"
                        android:textSize="24px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34px"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:src="@drawable/ic_vpa_weather_middle_rain" />

                    <TextView
                        android:layout_width="122px"
                        android:layout_height="33px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:text="机滤"
                        android:textColor="@color/black"
                        android:textSize="24px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34px"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:src="@drawable/ic_vpa_weather_middle_rain" />

                    <TextView
                        android:layout_width="122px"
                        android:layout_height="33px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="空调滤清"
                        android:textSize="24px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34px"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:src="@drawable/ic_vpa_weather_middle_rain" />

                    <TextView
                        android:layout_width="122px"
                        android:layout_height="33px"
                        android:layout_marginTop="10px"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="工时费"
                        android:textSize="24px" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="64px"
                android:layout_height="45px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:text="备注"
                android:textColor="@color/black"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et"
                android:layout_width="580px"
                android:layout_height="195px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:gravity="top"
                android:hint="您可以输入您想备注的信息"
                android:background="@drawable/shape1"
                android:textColorHint="#454B5C"
                android:textColor="@color/black"
                android:paddingLeft="20px"
                android:paddingTop="14px"
                android:textSize="28px" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="260px"
        android:layout_height="80px"
        android:layout_marginLeft="83px"
        android:layout_marginTop="24px"
        android:background="@drawable/selector"
        android:gravity="center"
        android:text="提交预约"
        android:textColor="#FFFFFF"
        android:textSize="28px" />

    <ImageView
        android:layout_width="1920px"
        android:layout_height="64px"
        android:layout_marginTop="71px"
        android:src="@drawable/ic____2" />
</LinearLayout>